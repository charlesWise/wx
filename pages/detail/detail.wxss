/**banner**/
.slide-image{
  width: 100%;
  height: 100%;
}
/**自定义微信小程序swiper轮播图面板指示点的样式**/
.banner-wrap {
  position: relative;
}
.banner-wrap .swipe-btn-wrapper {
    position: absolute;
    left: 0;
    bottom: 3px;
    z-index: 20;
    width: 100%;
    text-align: center;
    height: 1rem;
    line-height: 1rem;
}
.banner-wrap .swipe-btn-wrapper .swipe-btn-list {
    background-color: rgba(0, 0, 0, 0.5);
    border-radius: 10px;
    padding: 0 5px;
    display: inline-block;
}
.banner-wrap .swipe-btn-wrapper .swipe-btn-list view {
    width: 6px;
    height: 6px;
    float: left;
    background-color: #fff;
    border-radius: 3px;
    margin: 3px !important;
}
.banner-wrap .swipe-btn-wrapper .swipe-btn-list view.active {
  background-color: #de698c;
}
